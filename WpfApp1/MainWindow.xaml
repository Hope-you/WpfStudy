<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <!--当前窗口的上下文,视图和数据交互的地方 在这里写了实体类,前台是可以获取数据的-->
    <!--也可以在后台代码中实现,右击 查看代码-->
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock x:Name="textblock" Text="我是老大哇!"></TextBlock>

            <TextBox x:Name="t1" Text="{Binding Message}"></TextBox>
            <TextBox x:Name="t2"  Text="{Binding ElementName=textblock,Path=Name}"></TextBox>
            <TextBox x:Name="t3"  Text="{Binding ElementName=textblock,Path=Text}"></TextBox>
        </StackPanel>
    </Grid>
</Window>
